# ===========================================
# Household Hero API - Environment Variables
# ===========================================
# Copy this file to .env and update the values

# Database (PostgreSQL)
POSTGRES_USER=household
POSTGRES_PASSWORD=household_secret
POSTGRES_DB=household_db
DATABASE_URL="postgresql://household:household_secret@localhost:5432/household_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# pgAdmin (optional, for database management)
PGADMIN_EMAIL=admin@household.com
PGADMIN_PASSWORD=admin

# Application
PORT=3001
NODE_ENV=development
API_PREFIX=api/v1

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
